<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg border-0 rounded-5 login-admin-card" style="width: 100%; max-width: 500px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <img src="/images/florzinha.png" alt="Hospital Divinense Service" class="img-fluid"
                    style="max-height: 80px; border-radius: 10px">
            </div>

            <div class="mb-4 text-center">
                <h3 class="fw-bold" style="color: var(--hds-blue);">Acesso Restrito</h3>
                <p class="text-muted small">Painel de Gestão e Análise HDS</p>
            </div>

            {{#if erro}}
            <div class="alert alert-danger alert-dismissible fade show small" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> {{erro}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}

            <form action="/formulario/graficos" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-semibold small">E-mail Corporativo</label>
                    <div class="input-group input-group-modern">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" class="form-control" name="email" value="{{emailDigitado}}"
                            placeholder="admin@hds.com.br" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold small">Senha de Acesso</label>
                    <div class="input-group input-group-modern">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="senha" placeholder="••••••••" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                    ACESSAR SISTEMA
                </button>
            </form>

            <div class="mt-4 text-center">
                <small class="text-muted">© 2024 - Projeto Hospital Divinense Service</small>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>