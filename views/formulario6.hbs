<form action="/formulario/inserir" method="POST">
    <input type="hidden" name="parte" value="6">
    <input type="hidden" name="idFormulario" value="{{idFormulario}}">

    <div class="card border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Comentário Livre</h5>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <textarea class="form-control" name="comentario" rows="3" placeholder="(Opcional)"></textarea>
            </div>
        </div>
    </div>

    <div class="d-grid gap-2 mb-5 mt-3">
        <button type="submit" class="btn btn-success btn-lg">Enviar Avaliação</button>
    </div>
</form>
